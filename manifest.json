{
  "name": "Atomic Flow",
  "description": "Stay in Flow",
  "version": "0.0.1",
  "manifest_version": 3,
  "background": {
    "persistent": true,
    "service_worker": "src/pages/background/index.js"
  },
  "declarative_net_request": {
    "rule_resources": [{
      "id": "ruleset_1",
      "enabled": true,
      "path": "rules.json"
    }]
  },
  
  "permissions": [
    "activeTab",
      "tabs",
      "webNavigation",
    "storage",
    "declarativeNetRequest"

  ],
  "host_permissions":[
    "<all_urls>"
],
  "action": {
    "default_title": "Atomic Flow",
    "default_popup": "index.html"
  }
}
